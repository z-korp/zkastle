{
  "version": 2,
  "builds": [
    {
      "src": "client/vite.config.js",
      "use": "@vercel/static-build",
      "config": { "distDir": "client/dist" }
    },
    {
      "src": "api/**/Cargo.toml",
      "use": "@vercel/rust"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/main.rs" },
    { "src": "/(.*)", "dest": "/client/index.html" }
  ]
}
