{
  "version": 2,
  "builds": [
    {
      "src": "client/vite.config.js",
      "use": "@vercel/static-build",
      "config": { "distDir": "client/dist" }
    },
    {
      "src": "api/src/main.rs",
      "use": "@vercel/rust",
      "config": { "functions": { "api/*": { "runtime": "@vercel/rust" } } }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/src/main.rs" },
    { "src": "/(.*)", "dest": "/client/index.html" }
  ]
}
